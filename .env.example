# GITHUB_TOKEN - Get from https://github.com/settings/tokens
# Needs: repo, delete_repo, admin:repo_hook, workflow permissions
GITHUB_TOKEN=ghp_your_github_token_here
GITHUB_USERNAME=your_username

# LLM Provider: 'iitm' for IIT Madras AI Pipeline, 'openai' or 'anthropic'
LLM_PROVIDER=iitm
# IIT Madras AI Pipeline Token
IITM_AI_TOKEN=your_iitm_ai_token_here
# OpenAI API Key (NOT NEEDED when using IIT Madras)
# OPENAI_API_KEY=sk-your-openai-api-key-here
# ANTHROPIC_API_KEY=sk-ant-your_anthropic_key_here

# For IIT Madras: use their AI pipeline endpoint
LLM_MODEL=gpt-4-turbo-preview
IITM_API_BASE_URL=https://llm.iitm.ac.in/v1

# Student Configuration
STUDENT_SECRET=your-secure-secret-here
STUDENT_EMAIL=your_email@ds.study.iitm.ac.in

# API Configuration
API_PORT=5000
STUDENT_API_BASE_URL=https://your-domain.com
EVALUATION_API_BASE_URL=https://eval-domain.com

# Database - Use PostgreSQL in production
# DATABASE_URL=postgresql://user:password@localhost/dbname
DATABASE_URL=sqlite:///deployment.db

# Timeouts
REQUEST_TIMEOUT=600
MAX_RETRIES=5
